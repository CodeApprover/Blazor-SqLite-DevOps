name: 'Set environment variables'
description: 'Configures environment variables for workflows'
inputs:
  varFilePath:
    description: 'File path to variable file or directory. Defaults to ./.github/variables/* if none specified and runs against each file in that directory.'
    required: false
    default: ./.github/variables/*
runs:
  using: "composite"
  steps:
    - run: |
        while IFS='=' read -r key value; do
          echo "$key=$value" >> $GITHUB_ENV
        done < ${{ inputs.varFilePath }}
      shell: bash
